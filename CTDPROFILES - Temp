##Plot grid ####
library(gridGraphics)
##Add all of them in one graph
Temp_all <- plot_grid(Temp1,Temp2, Temp3,Temp4, Temp5,Temp6,
                      ncol=2, nrow=3,
                      align = "hv")
plot(Temp_all)

##Add legend
Temp_final <- plot_grid(Temp_all,legend_T, ncol =2 , rel_widths = c(0.5, .07)) # give 10% for the legend bar
plot(Temp_final)

# save the final graph
#PNG
ggsave(Temp_final,filename = "MSM80_Temperature.png",width = 13, height = 10, dpi = 150, units = "in", device='png')

#SVG
#Replace.svg with pdf to save the same figure in pdf
library(grDevices)
library(svglite)
install.packages(svglite)
ggsave(filename = "MSM80_Temperature.svg",width = 13, height = 10,
       plot = print(Temp_final))





